
.showgoods{
  width: 400rpx;
  height: 380rpx;
  position: fixed;
  top: 200rpx;
  left: 200rpx;
  border-radius: 10rpx;
  background-color: #e9bbff;
}
.showgoods image{
  width: 400rpx;
  height: 240rpx;
}
page{
  width: 100%;
  height: 100%;
  background-color: #f9f0ff;
}
.goodsbox{
  display: flex;
}
.aside-left{
  width: 200rpx;
  height: 1100rpx;
  text-align: center;
  padding-top: 10rpx;
  background-color: #ffd9e5;
}
.aside-left .aside-item{
    width: 190rpx;
   height: 70rpx;
   line-height: 70rpx;
   background-color:#ffffff;
   margin-bottom: 10rpx;
}
.acticecolor{
  color: #ff5ab2;
  border-left: 10rpx solid #ff5ab2;
}
.goods-item{
  display: flex;
  flex-wrap: wrap;
}
.item1{
      display: block;
}
.goods-item .item1 image{
  display: block;
  margin: 20rpx 15rpx 10rpx 15rpx;
  width: 230rpx;
  height: 100rpx;
}
.goods-item .item1 text{
    display: block;
     text-align: center;
}
.title{
    height: 65rpx;
    margin-left: 20rpx;
}
.addbtn text{
    display: inline-block;
    width: 150rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    border-radius:10rpx ;
    margin-left: 20rpx;
    background-color: #ff5ab2;
}

